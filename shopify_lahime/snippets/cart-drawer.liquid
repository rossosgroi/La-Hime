{% comment %}
  Cart Drawer Snippet - La Hime
  AJAX cart drawer for quick cart management
{% endcomment %}

<div id="cart-drawer" class="fixed right-0 top-0 h-full w-full md:w-96 bg-white z-50 transform translate-x-full transition-transform duration-300 shadow-2xl overflow-y-auto">
  <div class="p-6">
    <div class="flex justify-between items-center mb-8">
      <h2 class="font-serif-display text-2xl text-gray-900">Shopping Bag</h2>
      <button onclick="closeCartDrawer()" class="p-2 hover:bg-gray-100 rounded-full">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    
    <div id="cart-drawer-items">
      {% if cart.item_count == 0 %}
        <div class="text-center py-20">
          <h3 class="text-xl font-bold text-gray-900 mb-4">Your bag is empty</h3>
          <p class="text-gray-500 mb-8">Looks like you haven't added anything yet.</p>
          <a href="/collections/all" onclick="closeCartDrawer()" class="inline-block bg-black text-white px-8 py-3 rounded-full font-bold uppercase tracking-wider hover:bg-pink-500 transition-colors">
            Start Shopping
          </a>
        </div>
      {% else %}
        <div class="space-y-6 mb-6">
          {% for item in cart.items %}
            <div class="flex gap-4 items-center border-b border-gray-100 pb-4" data-line-item="{{ forloop.index }}">
              <a href="{{ item.url }}" class="w-20 h-20 flex-shrink-0 bg-gray-100 rounded-lg overflow-hidden block">
                {% if item.image %}
                  <img src="{{ item.image | img_url: '160x' }}" alt="{{ item.title | escape }}" class="w-full h-full object-cover hover:scale-110 transition-transform duration-500" />
                {% endif %}
              </a>
              
              <div class="flex-1 min-w-0">
                <div class="flex justify-between items-start mb-2">
                  <a href="{{ item.url }}" class="font-bold text-gray-900 font-serif-display text-sm hover:text-pink-600 transition-colors truncate">
                    {{ item.product.title }}
                  </a>
                  <p class="font-mono font-medium text-gray-900 text-sm ml-2">{{ item.final_line_price | money }}</p>
                </div>
                
                {% if item.variant.title != 'Default Title' %}
                  <p class="text-xs text-gray-500 mb-2">{{ item.variant.title }}</p>
                {% endif %}
                
                <div class="flex justify-between items-center">
                  <div class="flex items-center border border-gray-200 rounded-full">
                    <button 
                      onclick="updateCartQuantity({{ forloop.index }}, -1)"
                      class="p-1 hover:bg-gray-50 rounded-full transition-colors text-gray-600"
                      {% if item.quantity <= 1 %}disabled{% endif %}
                    >
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                      </svg>
                    </button>
                    <span class="w-8 text-center text-sm font-bold text-gray-900">{{ item.quantity }}</span>
                    <button 
                      onclick="updateCartQuantity({{ forloop.index }}, 1)"
                      class="p-1 hover:bg-gray-50 rounded-full transition-colors text-gray-600"
                    >
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="12" y1="5" x2="12" y2="19"></line>
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                      </svg>
                    </button>
                  </div>
                  <button 
                    onclick="removeFromCart({{ forloop.index }})"
                    class="text-gray-400 hover:text-red-500 transition-colors"
                  >
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="3 6 5 6 21 6"></polyline>
                      <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        <div class="border-t border-gray-100 pt-6">
          <div class="space-y-3 mb-6">
            <div class="flex justify-between text-gray-600">
              <span>Subtotal</span>
              <span>{{ cart.total_price | money }}</span>
            </div>
            <div class="flex justify-between text-gray-600">
              <span>Shipping</span>
              <span>Calculated at checkout</span>
            </div>
            <div class="flex justify-between font-bold text-black text-lg border-t border-gray-100 pt-3">
              <span>Total</span>
              <span>{{ cart.total_price | money }}</span>
            </div>
          </div>

          <a href="/checkout" class="w-full block text-center bg-black text-white py-4 rounded-full font-bold uppercase tracking-widest hover:bg-pink-500 transition-all shadow-lg hover:shadow-pink-300/50 mb-4">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="inline mr-2">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
            Checkout
          </a>
          
          <a href="/cart" onclick="closeCartDrawer()" class="block text-center text-sm text-gray-500 hover:text-pink-600 transition-colors">
            View Full Cart
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<div id="cart-drawer-overlay" class="fixed inset-0 bg-black bg-opacity-50 z-40 hidden" onclick="closeCartDrawer()"></div>
