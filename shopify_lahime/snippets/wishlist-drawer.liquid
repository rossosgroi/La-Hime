{% comment %}
  Wishlist Drawer Snippet - La Hime
  Client-side wishlist management
{% endcomment %}

<div id="wishlist-drawer" class="fixed right-0 top-0 h-full w-full md:w-96 bg-white z-50 transform translate-x-full transition-transform duration-300 shadow-2xl overflow-y-auto">
  <div class="p-6">
    <div class="flex justify-between items-center mb-8">
      <h2 class="font-serif-display text-2xl text-gray-900">My Wishlist</h2>
      <button onclick="closeWishlistDrawer()" class="p-2 hover:bg-gray-100 rounded-full">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    
    <div id="wishlist-items">
      {%- comment -%} Populated by JavaScript {%- endcomment -%}
    </div>
  </div>
</div>

<div id="wishlist-drawer-overlay" class="fixed inset-0 bg-black bg-opacity-50 z-40 hidden" onclick="closeWishlistDrawer()"></div>
