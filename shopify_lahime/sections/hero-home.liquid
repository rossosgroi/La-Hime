{% comment %}
  Hero Home Section - La Hime
  Converts the React Home Hero section to Shopify Liquid
{% endcomment %}

<section class="relative h-screen w-full overflow-hidden bg-gradient-to-b from-purple-50 via-pink-50 to-white">
  {%- comment -%} Dynamic Gradient Overlay {%- endcomment -%}
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-pink-200/40 via-transparent to-transparent"></div>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_bottom_left,_var(--tw-gradient-stops))] from-blue-200/40 via-transparent to-transparent"></div>
  <div class="absolute inset-0 opacity-10 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')] mix-blend-overlay"></div>

  {%- comment -%} Floating Animated Elements (Y2K Stars) {%- endcomment -%}
  <div class="floating-star-1 absolute z-0 pointer-events-none" style="top: 15%; left: 10%;">
    <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor" class="text-pink-300">
      <path d="M12 0L14.5 9.5L24 12L14.5 14.5L12 24L9.5 14.5L0 12L9.5 9.5L12 0Z"/>
    </svg>
  </div>
  <div class="floating-star-2 absolute z-0 pointer-events-none" style="top: 65%; left: 8%;">
    <svg width="36" height="36" viewBox="0 0 24 24" fill="currentColor" class="text-purple-300">
      <path d="M12 0L14.5 9.5L24 12L14.5 14.5L12 24L9.5 14.5L0 12L9.5 9.5L12 0Z"/>
    </svg>
  </div>
  <div class="floating-star-3 absolute z-0 pointer-events-none" style="top: 25%; right: 15%;">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="text-pink-400">
      <path d="M12 0L14.5 9.5L24 12L14.5 14.5L12 24L9.5 14.5L0 12L9.5 9.5L12 0Z"/>
    </svg>
  </div>
  <div class="floating-star-4 absolute z-0 pointer-events-none" style="top: 45%; left: 85%;">
    <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor" class="text-pink-400/60">
      <path d="M12 0L14.5 9.5L24 12L14.5 14.5L12 24L9.5 14.5L0 12L9.5 9.5L12 0Z"/>
    </svg>
  </div>

  {%- comment -%} Hero Content {%- endcomment -%}
  <div class="relative z-10 h-full flex flex-col items-center justify-center text-center px-4">
    <div class="flex flex-col items-center hero-content">
      <div class="mb-4 inline-block px-4 py-1 rounded-full border border-pink-200 bg-white/50 backdrop-blur-sm text-pink-500 text-sm font-bold tracking-widest uppercase">
        {{ section.settings.badge_text | default: "The 2026 Collection" }}
      </div>

      <h1 class="font-brand text-7xl md:text-8xl lg:text-9xl text-gray-900 mb-6 drop-shadow-sm leading-tight pb-4 select-none">
        {{ section.settings.hero_title_1 | default: "Sweet and" }} <span class="text-transparent bg-clip-text bg-gradient-to-r from-pink-400 to-purple-400 italic pr-8 pb-16 pt-4 inline-block">{{ section.settings.hero_title_2 | default: "Spicy" }}</span>
      </h1>
      
      <div class="flex gap-4 mt-8 flex-wrap justify-center">
        <a href="{{ section.settings.cta_primary_link | default: '/collections/all' }}" class="group relative inline-flex items-center gap-2 bg-black text-white px-10 py-5 rounded-full font-bold uppercase tracking-widest hover:bg-pink-500 transition-all duration-300 shadow-xl hover:shadow-pink-500/40 transform hover:-translate-y-1">
          {{ section.settings.cta_primary_text | default: "Shop New Arrivals" }}
        </a>
        <a href="{{ section.settings.cta_secondary_link | default: '/pages/about' }}" class="group relative inline-flex items-center gap-2 bg-white text-black border border-gray-200 px-10 py-5 rounded-full font-bold uppercase tracking-widest hover:border-black transition-all duration-300 shadow-md transform hover:-translate-y-1">
          {{ section.settings.cta_secondary_text | default: "Our Story" }}
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(0deg) scale(1); opacity: 0.6; }
    50% { transform: translateY(-20px) rotate(15deg) scale(1.1); opacity: 1; }
  }
  .floating-star-1 { animation: float 4s ease-in-out infinite; }
  .floating-star-2 { animation: float 4s ease-in-out infinite 1s; }
  .floating-star-3 { animation: float 4s ease-in-out infinite 0.5s; }
  .floating-star-4 { animation: float 4s ease-in-out infinite 2s; }
  
  .hero-content {
    animation: fadeInUp 0.8s ease-out;
  }
  
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>

{% schema %}
{
  "name": "Hero Home",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "The 2026 Collection"
    },
    {
      "type": "text",
      "id": "hero_title_1",
      "label": "Hero Title Part 1",
      "default": "Sweet and"
    },
    {
      "type": "text",
      "id": "hero_title_2",
      "label": "Hero Title Part 2 (Gradient)",
      "default": "Spicy"
    },
    {
      "type": "text",
      "id": "cta_primary_text",
      "label": "Primary Button Text",
      "default": "Shop New Arrivals"
    },
    {
      "type": "url",
      "id": "cta_primary_link",
      "label": "Primary Button Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "cta_secondary_text",
      "label": "Secondary Button Text",
      "default": "Our Story"
    },
    {
      "type": "url",
      "id": "cta_secondary_link",
      "label": "Secondary Button Link",
      "default": "/pages/about"
    }
  ],
  "presets": [
    {
      "name": "Hero Home"
    }
  ]
}
{% endschema %}
