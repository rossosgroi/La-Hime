{% comment %}
  Aesthetic Banner Section - La Hime
  Mid-page banner with image and text
{% endcomment %}

<section class="py-24 bg-black text-white overflow-hidden relative">
  <div class="absolute top-0 left-0 w-full h-full opacity-20 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>
  <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-purple-900/20 to-transparent pointer-events-none"></div>

  <div class="max-w-7xl mx-auto px-4 grid grid-cols-1 md:grid-cols-2 gap-12 items-center relative z-10">
    <div class="order-2 md:order-1 relative group">
      <div class="absolute inset-0 bg-pink-500 rounded-t-full blur-2xl opacity-20 group-hover:opacity-30 transition-opacity"></div>
      {% if section.settings.banner_image %}
        <img 
          src="{{ section.settings.banner_image | img_url: '1000x' }}" 
          alt="{{ section.settings.banner_title | escape }}" 
          class="relative w-full h-[500px] object-cover rounded-t-full border-4 border-white/20 hover:scale-[1.02] transition-transform duration-700"
        />
      {% else %}
        <img 
          src="https://images.unsplash.com/photo-1515886657613-9f3515b0c78f?q=80&w=1000&auto=format&fit=crop" 
          alt="Model Style" 
          class="relative w-full h-[500px] object-cover rounded-t-full border-4 border-white/20 hover:scale-[1.02] transition-transform duration-700"
        />
      {% endif %}
    </div>
    
    <div class="order-1 md:order-2 text-center md:text-left">
      <span class="text-pink-400 font-mono mb-4 block tracking-widest">{{ section.settings.banner_subtitle | default: "/// THE LA HIME WAY" }}</span>
      <h2 class="font-serif-display text-5xl md:text-6xl leading-tight mb-6">
        {{ section.settings.banner_title_line1 | default: "Modern Day" }} <br/>
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-pink-300 to-purple-300 font-brand">{{ section.settings.banner_title_line2 | default: "Princess" }}</span>
      </h2>
      <p class="text-gray-400 text-lg mb-8 leading-relaxed">
        {{ section.settings.banner_description | default: "Bridging the gap between fantasy and reality. Our collection fuses the soft nostalgia of early 2000s Tokyo with a sharp, modern edge—crafted for those who aren't afraid to stand out." }}
      </p>
      <a href="{{ section.settings.banner_link | default: '/pages/about' }}" class="text-white border-b border-pink-500 pb-1 hover:text-pink-400 transition-colors inline-flex items-center gap-2 group">
        {{ section.settings.banner_link_text | default: "Read Our Story" }}
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="group-hover:translate-x-1 transition-transform">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Banner Aesthetic",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "banner_subtitle",
      "label": "Subtitle",
      "default": "/// THE LA HIME WAY"
    },
    {
      "type": "text",
      "id": "banner_title_line1",
      "label": "Title Line 1",
      "default": "Modern Day"
    },
    {
      "type": "text",
      "id": "banner_title_line2",
      "label": "Title Line 2 (Gradient)",
      "default": "Princess"
    },
    {
      "type": "textarea",
      "id": "banner_description",
      "label": "Description",
      "default": "Bridging the gap between fantasy and reality. Our collection fuses the soft nostalgia of early 2000s Tokyo with a sharp, modern edge—crafted for those who aren't afraid to stand out."
    },
    {
      "type": "text",
      "id": "banner_link_text",
      "label": "Link Text",
      "default": "Read Our Story"
    },
    {
      "type": "url",
      "id": "banner_link",
      "label": "Link URL",
      "default": "/pages/about"
    }
  ],
  "presets": [
    {
      "name": "Banner Aesthetic"
    }
  ]
}
{% endschema %}
