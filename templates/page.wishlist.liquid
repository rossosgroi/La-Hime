{% comment %}
  Wishlist Page - La Hime
  Converted from Wishlist.tsx - client-side wishlist display
{% endcomment %}

<div class="pt-32 pb-24 min-h-screen bg-white">
  <div class="max-w-7xl mx-auto px-4">
    
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="font-serif text-5xl text-gray-900 mb-4">Your Wishlist</h1>
      <p class="text-gray-600">Save your favorite items for later</p>
    </div>

    <!-- Wishlist Items (populated by JavaScript) -->
    <div id="wishlist-items" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Will be populated by JavaScript -->
    </div>

    <!-- Empty State -->
    <div id="wishlist-empty" class="hidden text-center py-20">
      <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="mx-auto mb-6 text-gray-300">
        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
      </svg>
      <h2 class="font-serif text-3xl text-gray-900 mb-4">Your Wishlist is Empty</h2>
      <p class="text-gray-600 mb-8">Start adding items you love!</p>
      <a href="/collections/all" class="inline-block px-8 py-3 bg-black text-white rounded-full font-bold hover:bg-pink-500 transition-colors">
        Shop Collection
      </a>
    </div>

  </div>
</div>

<script>
  // Load and display wishlist items
  function loadWishlist() {
    const wishlist = JSON.parse(localStorage.getItem('lahime_wishlist') || '[]');
    const container = document.getElementById('wishlist-items');
    const emptyState = document.getElementById('wishlist-empty');
    
    if (wishlist.length === 0) {
      container.classList.add('hidden');
      emptyState.classList.remove('hidden');
      return;
    }
    
    container.classList.remove('hidden');
    emptyState.classList.add('hidden');
    
    // Fetch product details for wishlisted items
    const promises = wishlist.map(productId => 
      fetch(`/products/${productId}.js`).then(r => r.json())
    );
    
    Promise.all(promises).then(products => {
      container.innerHTML = products.map(product => `
        <div class="group">
          <div class="relative bg-white rounded-2xl overflow-hidden border-4 border-gray-100 hover:border-pink-200 transition-all duration-300 mb-4">
            <div class="aspect-square overflow-hidden bg-gray-50">
              <img src="${product.featured_image}" alt="${product.title}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
            </div>
            <button onclick="toggleWishlist(event, '${product.handle}')" class="absolute top-4 right-4 w-10 h-10 rounded-full bg-white shadow-lg flex items-center justify-center hover:bg-pink-50 transition-colors">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" class="text-pink-500">
                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
              </svg>
            </button>
          </div>
          <div class="px-2">
            <h3 class="font-bold text-gray-900 mb-1 group-hover:text-pink-500 transition-colors">${product.title}</h3>
            <p class="text-gray-900 font-bold">$${(product.price / 100).toFixed(2)}</p>
            <a href="/products/${product.handle}" class="mt-3 block w-full px-4 py-2 bg-black text-white text-center rounded-full text-sm font-bold hover:bg-pink-500 transition-colors">
              View Product
            </a>
          </div>
        </div>
      `).join('');
    }).catch(error => {
      console.error('Error loading wishlist:', error);
      emptyState.classList.remove('hidden');
      container.classList.add('hidden');
    });
  }
  
  // Load wishlist on page load
  document.addEventListener('DOMContentLoaded', loadWishlist);
</script>
