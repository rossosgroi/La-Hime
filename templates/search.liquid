{% comment %}
  Search Results Page - La Hime
  Displays search results with filters
{% endcomment %}

<div class="pt-32 pb-24 min-h-screen bg-white">
  <div class="max-w-7xl mx-auto px-4">
    
    <!-- Search Header -->
    <div class="mb-12 text-center">
      <h1 class="font-serif text-4xl lg:text-5xl text-gray-900 mb-4">Search Results</h1>
      {% if search.performed %}
        <p class="text-gray-600 text-lg">
          {% if search.results_count > 0 %}
            Found <strong>{{ search.results_count }}</strong> {{ search.results_count | pluralize: 'result', 'results' }} for "<strong>{{ search.terms }}</strong>"
          {% else %}
            No results found for "<strong>{{ search.terms }}</strong>"
          {% endif %}
        </p>
      {% else %}
        <p class="text-gray-600 text-lg">Enter a search term to find products</p>
      {% endif %}
    </div>

    {% if search.performed %}
      {% if search.results_count > 0 %}
        
        <!-- Product Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 mb-16">
          {% for item in search.results %}
            {% if item.object_type == 'product' %}
              {% render 'product-card', product: item %}
            {% endif %}
          {% endfor %}
        </div>

        <!-- Pagination -->
        {% if paginate.pages > 1 %}
          <div class="mt-16">
            {% render 'pagination', paginate: paginate %}
          </div>
        {% endif %}

      {% else %}
        
        <!-- No Results State -->
        <div class="text-center py-20">
          <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="mx-auto mb-6 text-gray-300">
            <circle cx="11" cy="11" r="8"></circle>
            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
          </svg>
          
          <h3 class="font-serif text-2xl text-gray-900 mb-4">No products found</h3>
          <p class="text-gray-600 mb-8 max-w-md mx-auto">
            We couldn't find any products matching "{{ search.terms }}". 
            Try searching with different keywords or browse our full collection.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/collections/all" class="px-8 py-3 bg-black text-white rounded-full font-medium hover:bg-gray-800 transition-colors">
              Shop All Products
            </a>
            <a href="/" class="px-8 py-3 border-2 border-black text-black rounded-full font-medium hover:bg-black hover:text-white transition-colors">
              Back to Home
            </a>
          </div>
        </div>

      {% endif %}
    {% else %}
      
      <!-- Search Form (if no search performed) -->
      <div class="max-w-2xl mx-auto">
        <form action="/search" method="get" class="relative">
          <input 
            type="search" 
            name="q" 
            placeholder="Search for products..." 
            class="w-full px-6 py-4 border-2 border-gray-200 rounded-full focus:border-black focus:outline-none text-lg"
            value="{{ search.terms }}"
          >
          <button 
            type="submit" 
            class="absolute right-2 top-1/2 -translate-y-1/2 px-6 py-2 bg-black text-white rounded-full font-medium hover:bg-gray-800 transition-colors"
          >
            Search
          </button>
        </form>
        
        <!-- Popular Searches -->
        <div class="mt-12 text-center">
          <p class="text-gray-500 text-sm uppercase tracking-wider mb-4">Popular Searches</p>
          <div class="flex flex-wrap justify-center gap-3">
            <a href="/search?q=miniskirts" class="px-4 py-2 border border-gray-200 rounded-full text-sm hover:border-black hover:bg-black hover:text-white transition-colors">Miniskirts</a>
            <a href="/search?q=tops" class="px-4 py-2 border border-gray-200 rounded-full text-sm hover:border-black hover:bg-black hover:text-white transition-colors">Tops</a>
            <a href="/search?q=dresses" class="px-4 py-2 border border-gray-200 rounded-full text-sm hover:border-black hover:bg-black hover:text-white transition-colors">Dresses</a>
            <a href="/search?q=accessories" class="px-4 py-2 border border-gray-200 rounded-full text-sm hover:border-black hover:bg-black hover:text-white transition-colors">Accessories</a>
          </div>
        </div>
      </div>

    {% endif %}
    
  </div>
</div>

{% paginate search.results by 12 %}
  <!-- Paginate wrapper (hidden, used for pagination logic) -->
{% endpaginate %}
