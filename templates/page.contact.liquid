{% comment %}
  Contact Page Template - La Hime
  Custom template for contact page
{% endcomment %}

<div class="pt-32 pb-24 min-h-screen bg-stone-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h1 class="font-serif-display text-4xl lg:text-5xl mb-4 text-gray-900">Get in Touch</h1>
      <p class="text-gray-500">We'd love to hear from you. Send us a message!</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      {%- comment -%} Info {%- endcomment -%}
      <div class="bg-white p-8 rounded-2xl shadow-sm space-y-8 h-fit">
        <div>
          <h3 class="font-bold text-xl mb-4 flex items-center gap-2 text-gray-900">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-pink-500">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            Email
          </h3>
          <p class="text-gray-600">contact@lahime.com</p>
          <p class="text-gray-600">press@lahime.com</p>
        </div>
        <div>
          <h3 class="font-bold text-xl mb-4 flex items-center gap-2 text-gray-900">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-pink-500">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
            Studio
          </h3>
          <p class="text-gray-600">Via Condotti 15</p>
          <p class="text-gray-600">00187 Rome, Italy</p>
        </div>
      </div>

      {%- comment -%} Form {%- endcomment -%}
      <div class="bg-white p-8 rounded-2xl shadow-sm">
        {% form 'contact' %}
          {% if form.posted_successfully? %}
            <div class="h-full flex flex-col items-center justify-center text-center py-12">
              <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center text-green-600 mb-4">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
              </div>
              <h3 class="font-bold text-2xl mb-2 text-gray-900">Message Sent!</h3>
              <p class="text-gray-500">We'll get back to you as soon as possible.</p>
            </div>
          {% else %}
            {% if form.errors %}
              <div class="mb-6 p-3 bg-red-50 border border-red-100 rounded-xl text-red-600 text-sm">
                {{ form.errors | default_errors }}
              </div>
            {% endif %}

            <div class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">First Name</label>
                  <input type="text" name="contact[first_name]" required class="w-full px-4 py-3 rounded-lg bg-gray-50 border-transparent focus:bg-white focus:ring-2 focus:ring-pink-200 transition-all outline-none" />
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Last Name</label>
                  <input type="text" name="contact[last_name]" required class="w-full px-4 py-3 rounded-lg bg-gray-50 border-transparent focus:bg-white focus:ring-2 focus:ring-pink-200 transition-all outline-none" />
                </div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                <input type="email" name="contact[email]" required class="w-full px-4 py-3 rounded-lg bg-gray-50 border-transparent focus:bg-white focus:ring-2 focus:ring-pink-200 transition-all outline-none" />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Message</label>
                <textarea name="contact[body]" rows="4" required class="w-full px-4 py-3 rounded-lg bg-gray-50 border-transparent focus:bg-white focus:ring-2 focus:ring-pink-200 transition-all outline-none"></textarea>
              </div>
              <button type="submit" class="w-full bg-black text-white py-4 rounded-lg font-bold uppercase tracking-widest hover:bg-pink-500 transition-all">Send Message</button>
            </div>
          {% endif %}
        {% endform %}
      </div>
    </div>
  </div>
</div>
