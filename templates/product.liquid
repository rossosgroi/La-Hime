{% comment %}
  Product Template - La Hime Product Detail Page
  Converts the React ProductDetail page to Shopify Liquid
{% endcomment %}

<div class="pt-32 pb-24 min-h-screen bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    {%- comment -%} Breadcrumb {%- endcomment -%}
    <div class="text-sm text-gray-500 mb-8 flex items-center gap-2">
      <a href="/" class="hover:text-black transition-colors">Home</a> / 
      {% if collection %}
        <a href="{{ collection.url }}" class="hover:text-black transition-colors">{{ collection.title }}</a> / 
      {% else %}
        <a href="/collections/all" class="hover:text-black transition-colors">Shop</a> / 
      {% endif %}
      <span class="text-black font-medium">{{ product.title }}</span>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 lg:gap-20">
      
      {%- comment -%} Gallery {%- endcomment -%}
      <div class="space-y-4">
        <div class="aspect-[3/4] w-full bg-gray-100 rounded-2xl overflow-hidden relative border border-gray-100 shadow-sm" id="main-product-image">
          {% if product.featured_image %}
            <img src="{{ product.featured_image | img_url: '1200x' }}" alt="{{ product.title | escape }}" class="w-full h-full object-cover" id="product-main-img" />
          {% endif %}
          
          {% if product.tags contains 'new' or product.tags contains 'New' %}
            <span class="absolute top-4 left-4 bg-black text-white text-xs font-bold px-3 py-1 rounded-full uppercase shadow-md">New Season</span>
          {% endif %}
        </div>
        
        {% if product.images.size > 1 %}
          <div class="grid grid-cols-4 gap-4">
            {% for image in product.images limit: 4 %}
              <button 
                onclick="changeMainImage('{{ image | img_url: '1200x' }}')"
                class="product-thumb aspect-square rounded-lg overflow-hidden border-2 transition-all {% if forloop.first %}border-black opacity-100{% else %}border-transparent opacity-70 hover:opacity-100{% endif %}"
                data-image-url="{{ image | img_url: '1200x' }}"
              >
                <img src="{{ image | img_url: '300x' }}" alt="" class="w-full h-full object-cover" />
              </button>
            {% endfor %}
          </div>
        {% endif %}
      </div>

      {%- comment -%} Product Info {%- endcomment -%}
      <div class="flex flex-col h-full">
        <div class="mb-auto">
          <h1 class="font-serif-display text-4xl lg:text-5xl text-gray-900 mb-2">{{ product.title }}</h1>
          <div class="flex items-center gap-4 mb-6">
            <p class="text-2xl font-mono text-gray-900">
              {% if product.compare_at_price > product.price %}
                <span class="line-through text-gray-400 text-xl mr-2">{{ product.compare_at_price | money }}</span>
                <span class="text-pink-600">{{ product.price | money }}</span>
              {% else %}
                {{ product.price | money }}
              {% endif %}
            </p>
          </div>

          <div class="text-gray-600 leading-relaxed mb-8 pl-1">
            {{ product.description }}
          </div>

          <form action="/cart/add" method="post" enctype="multipart/form-data" id="product-form">
            {%- comment -%} Variant Selection {%- endcomment -%}
            {% unless product.has_only_default_variant %}
              <div class="mb-8">
                {% for option in product.options_with_values %}
                  <div class="mb-6">
                    <div class="flex justify-between mb-3">
                      <span class="font-bold text-sm uppercase tracking-wide text-gray-900">Select {{ option.name }}</span>
                      {% if option.name == 'Size' %}
                        <a href="/pages/size-guide" class="text-xs text-gray-500 underline hover:text-black">Size Guide</a>
                      {% endif %}
                    </div>
                    
                    {% if option.name == 'Size' %}
                      <div class="flex gap-3 flex-wrap">
                        {% for value in option.values %}
                          <input type="radio" name="options[{{ option.name }}]" value="{{ value | escape }}" id="option-{{ option.name }}-{{ value | handle }}" class="sr-only" {% if forloop.first %}checked{% endif %}>
                          <label for="option-{{ option.name }}-{{ value | handle }}" class="size-selector w-12 h-12 rounded-lg flex items-center justify-center font-bold text-sm transition-all cursor-pointer bg-white border border-gray-200 text-gray-900 hover:border-black">
                            {{ value }}
                          </label>
                        {% endfor %}
                      </div>
                    {% else %}
                      <select name="options[{{ option.name }}]" class="w-full px-4 py-3 rounded-xl bg-gray-50 border-transparent focus:bg-white focus:ring-2 focus:ring-pink-200 transition-all outline-none text-gray-900">
                        {% for value in option.values %}
                          <option value="{{ value | escape }}">{{ value }}</option>
                        {% endfor %}
                      </select>
                    {% endif %}
                  </div>
                {% endfor %}
              </div>
            {% endunless %}

            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" />

            {%- comment -%} Actions {%- endcomment -%}
            <div class="flex flex-col gap-3 mb-10">
              <div class="flex gap-4">
                <button 
                  type="submit"
                  name="add"
                  class="flex-1 flex items-center justify-center gap-2 font-bold uppercase tracking-widest py-4 rounded-full border-2 bg-white border-black text-black hover:bg-black hover:text-white transition-all duration-300"
                  {% unless product.available %}disabled{% endunless %}
                >
                  {% if product.available %}
                    Add to Cart
                  {% else %}
                    Sold Out
                  {% endif %}
                </button>
                
                <button 
                  type="button"
                  onclick="toggleWishlist(event, {{ product.id }})"
                  class="wishlist-toggle w-14 h-14 rounded-full border-2 border-gray-300 flex items-center justify-center hover:border-pink-300 hover:text-pink-500 text-gray-900 transition-all"
                >
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                  </svg>
                </button>
                
                <button 
                  type="button"
                  onclick="shareProduct()"
                  class="w-14 h-14 rounded-full border-2 border-gray-300 flex items-center justify-center hover:border-black text-gray-900 hover:text-black transition-all relative"
                  id="share-btn"
                >
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="18" cy="5" r="3"></circle>
                    <circle cx="6" cy="12" r="3"></circle>
                    <circle cx="18" cy="19" r="3"></circle>
                    <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
                    <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
                  </svg>
                  <span id="share-tooltip" class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 px-3 py-1 bg-black text-white text-xs rounded whitespace-nowrap hidden">Copied!</span>
                </button>
              </div>

              {% if product.available %}
                <button 
                  type="button"
                  onclick="buyNow()"
                  class="w-full bg-black text-white font-bold uppercase tracking-widest py-4 rounded-full shadow-lg hover:bg-gray-800 transition-all duration-300"
                >
                  Buy Now
                </button>
              {% endif %}
            </div>
          </form>
        </div>

        {%- comment -%} Guarantees {%- endcomment -%}
        <div class="grid grid-cols-2 gap-4 pt-8 border-t border-gray-100 text-sm text-gray-500">
          <div class="flex items-center gap-3">
            <div class="bg-green-50 p-2 rounded-full text-green-600">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="1" y="3" width="15" height="13"></rect>
                <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
                <circle cx="5.5" cy="18.5" r="2.5"></circle>
                <circle cx="18.5" cy="18.5" r="2.5"></circle>
              </svg>
            </div>
            <span>Free Shipping over â‚¬150</span>
          </div>
          <div class="flex items-center gap-3">
            <div class="bg-blue-50 p-2 rounded-full text-blue-600">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
              </svg>
            </div>
            <span>30-Day Easy Returns</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function changeMainImage(imageUrl) {
    document.getElementById('product-main-img').src = imageUrl;
    
    // Update active thumbnail
    document.querySelectorAll('.product-thumb').forEach(thumb => {
      thumb.classList.remove('border-black', 'opacity-100');
      thumb.classList.add('border-transparent', 'opacity-70');
    });
    event.currentTarget.classList.add('border-black', 'opacity-100');
    event.currentTarget.classList.remove('border-transparent', 'opacity-70');
  }

  function shareProduct() {
    navigator.clipboard.writeText(window.location.href);
    const tooltip = document.getElementById('share-tooltip');
    tooltip.classList.remove('hidden');
    setTimeout(() => tooltip.classList.add('hidden'), 2000);
  }

  function buyNow() {
    const form = document.getElementById('product-form');
    const formData = new FormData(form);
    
    fetch('/cart/add.js', {
      method: 'POST',
      body: formData
    }).then(response => response.json())
    .then(data => {
      window.location.href = '/checkout';
    });
  }

  // Size selector styling
  document.querySelectorAll('.size-selector').forEach(label => {
    label.addEventListener('click', function() {
      document.querySelectorAll('.size-selector').forEach(l => {
        l.classList.remove('bg-black', 'text-white', 'shadow-md', 'scale-105');
        l.classList.add('bg-white', 'text-gray-900');
      });
      this.classList.add('bg-black', 'text-white', 'shadow-md', 'scale-105');
      this.classList.remove('bg-white', 'text-gray-900');
    });
  });

  // Auto-select first size
  if (document.querySelector('.size-selector')) {
    document.querySelector('.size-selector').click();
  }
</script>

{% schema %}
{
  "name": "Product",
  "settings": []
}
{% endschema %}
