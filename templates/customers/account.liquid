{% comment %}
  Customer Account Page - Professional Dashboard
  Enhanced with account statistics, preferences, and advanced features
{% endcomment %}

{% if customer %}
  <div class="pt-32 pb-24 min-h-screen bg-stone-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      {%- comment -%} Account Header with Stats {%- endcomment -%}
      <div class="mb-8">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-6">
          <div>
            <h1 class="font-serif-display text-4xl md:text-5xl mb-2 text-gray-900">
              Welcome back, {{ customer.first_name | default: customer.email }}
            </h1>
            <p class="text-gray-500">Member since {{ customer.created_at | date: "%B %Y" }}</p>
          </div>
          <div class="flex items-center gap-3">
            {% if customer.tags contains 'VIP' %}
              <span class="px-4 py-2 bg-gradient-to-r from-purple-500 to-pink-500 text-white rounded-full text-sm font-bold">
                ⭐ VIP Member
              </span>
            {% endif %}
            <a href="{{ routes.account_logout_url }}" class="text-gray-500 hover:text-gray-900 text-sm font-medium">
              Sign Out →
            </a>
          </div>
        </div>

        {%- comment -%} Account Stats Cards {%- endcomment -%}
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
          <div class="bg-white p-6 rounded-2xl shadow-sm border-l-4 border-pink-500">
            <p class="text-sm text-gray-500 mb-1">Total Orders</p>
            <p class="text-3xl font-bold text-gray-900">{{ customer.orders_count }}</p>
          </div>
          <div class="bg-white p-6 rounded-2xl shadow-sm border-l-4 border-blue-500">
            <p class="text-sm text-gray-500 mb-1">Total Spent</p>
            <p class="text-3xl font-bold text-gray-900">{{ customer.total_spent | money }}</p>
          </div>
          <div class="bg-white p-6 rounded-2xl shadow-sm border-l-4 border-green-500">
            <p class="text-sm text-gray-500 mb-1">Saved Addresses</p>
            <p class="text-3xl font-bold text-gray-900">{{ customer.addresses_count }}</p>
          </div>
          <div class="bg-white p-6 rounded-2xl shadow-sm border-l-4 border-purple-500">
            <p class="text-sm text-gray-500 mb-1">Account Status</p>
            <p class="text-lg font-bold text-green-600 mt-2">✓ Active</p>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        
        {%- comment -%} Account Sidebar Navigation {%- endcomment -%}
        <div class="lg:col-span-1">
          <div class="bg-white p-6 rounded-2xl shadow-sm sticky top-32 space-y-4">
            <h2 class="font-bold text-lg text-gray-900 border-b border-gray-100 pb-3">Account</h2>
            
            <nav class="space-y-1">
              <a href="#dashboard" class="account-nav-link active" data-section="dashboard">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
                Dashboard
              </a>
              <a href="#orders" class="account-nav-link" data-section="orders">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                </svg>
                Orders
              </a>
              <a href="#profile" class="account-nav-link" data-section="profile">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                Profile
              </a>
              <a href="#addresses" class="account-nav-link" data-section="addresses">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                Addresses
              </a>
              <a href="#wishlist" class="account-nav-link" data-section="wishlist">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
                Wishlist
              </a>
              <a href="#preferences" class="account-nav-link" data-section="preferences">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                Preferences
              </a>
              <a href="#security" class="account-nav-link" data-section="security">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
                Security
              </a>
            </nav>
          </div>
        </div>

        {%- comment -%} Account Content Sections {%- endcomment -%}
        <div class="lg:col-span-3 space-y-8">

          {%- comment -%} DASHBOARD SECTION {%- endcomment -%}
          <section id="dashboard" class="account-section active">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              
              {%- comment -%} Recent Orders {%- endcomment -%}
              <div class="bg-white p-6 rounded-2xl shadow-sm">
                <h3 class="font-bold text-lg mb-4 flex items-center justify-between">
                  <span>Recent Orders</span>
                  <a href="#orders" class="text-sm text-pink-500 hover:text-pink-600 account-nav-link" data-section="orders">View All →</a>
                </h3>
                {% if customer.orders.size > 0 %}
                  <div class="space-y-3">
                    {% for order in customer.orders limit: 3 %}
                      <div class="border border-gray-200 rounded-lg p-4 hover:border-pink-300 transition-colors">
                        <div class="flex justify-between items-start mb-2">
                          <div>
                            <p class="font-bold text-sm">Order #{{ order.order_number }}</p>
                            <p class="text-xs text-gray-500">{{ order.created_at | date: "%b %d, %Y" }}</p>
                          </div>
                          <span class="text-sm font-bold">{{ order.total_price | money }}</span>
                        </div>
                        <div class="flex gap-2">
                          <span class="px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded">
                            {{ order.financial_status | capitalize }}
                          </span>
                          <span class="px-2 py-1 bg-blue-100 text-blue-700 text-xs font-medium rounded">
                            {{ order.fulfillment_status | default: 'Processing' | capitalize }}
                          </span>
                        </div>
                      </div>
                    {% endfor %}
                  </div>
                {% else %}
                  <p class="text-gray-500 text-sm text-center py-8">No orders yet</p>
                  <a href="/collections/all" class="block text-center mt-4 px-4 py-2 bg-black text-white rounded-lg text-sm font-bold hover:bg-pink-500 transition-colors">
                    Start Shopping
                  </a>
                {% endif %}
              </div>

              {%- comment -%} Quick Actions {%- endcomment -%}
              <div class="bg-white p-6 rounded-2xl shadow-sm">
                <h3 class="font-bold text-lg mb-4">Quick Actions</h3>
                <div class="space-y-3">
                  <a href="/collections/all" class="flex items-center gap-3 p-3 rounded-lg hover:bg-gray-50 transition-colors group">
                    <div class="w-10 h-10 bg-pink-100 rounded-lg flex items-center justify-center group-hover:bg-pink-500 transition-colors">
                      <svg class="w-5 h-5 text-pink-500 group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                      </svg>
                    </div>
                    <div>
                      <p class="font-medium text-sm">Continue Shopping</p>
                      <p class="text-xs text-gray-500">Browse our collections</p>
                    </div>
                  </a>
                  
                  <a href="{{ routes.account_addresses_url }}" class="flex items-center gap-3 p-3 rounded-lg hover:bg-gray-50 transition-colors group">
                    <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center group-hover:bg-blue-500 transition-colors">
                      <svg class="w-5 h-5 text-blue-500 group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                      </svg>
                    </div>
                    <div>
                      <p class="font-medium text-sm">Add New Address</p>
                      <p class="text-xs text-gray-500">Save delivery location</p>
                    </div>
                  </a>

                  <a href="/pages/contact" class="flex items-center gap-3 p-3 rounded-lg hover:bg-gray-50 transition-colors group">
                    <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center group-hover:bg-purple-500 transition-colors">
                      <svg class="w-5 h-5 text-purple-500 group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
                      </svg>
                    </div>
                    <div>
                      <p class="font-medium text-sm">Contact Support</p>
                      <p class="text-xs text-gray-500">We're here to help</p>
                    </div>
                  </a>
                </div>
              </div>

              {%- comment -%} Account Insights {%- endcomment -%}
              <div class="bg-gradient-to-br from-pink-500 to-purple-600 p-6 rounded-2xl shadow-sm text-white md:col-span-2">
                <h3 class="font-bold text-lg mb-3">Your Shopping Journey</h3>
                <div class="grid grid-cols-3 gap-4">
                  <div>
                    <p class="text-sm opacity-90 mb-1">Items Purchased</p>
                    <p class="text-3xl font-bold">
                      {% assign total_items = 0 %}
                      {% for order in customer.orders %}
                        {% assign total_items = total_items | plus: order.line_items.size %}
                      {% endfor %}
                      {{ total_items }}
                    </p>
                  </div>
                  <div>
                    <p class="text-sm opacity-90 mb-1">Favorite Category</p>
                    <p class="text-lg font-bold">Fashion</p>
                  </div>
                  <div>
                    <p class="text-sm opacity-90 mb-1">Member Level</p>
                    <p class="text-lg font-bold">
                      {% if customer.orders_count >= 10 %}
                        VIP Gold
                      {% elsif customer.orders_count >= 5 %}
                        Silver
                      {% else %}
                        Bronze
                      {% endif %}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </section>

          {%- comment -%} ORDERS SECTION {%- endcomment -%}
          <section id="orders" class="account-section">
            <div class="bg-white p-8 rounded-2xl shadow-sm">
              <div class="flex items-center justify-between mb-6">
                <h2 class="font-serif-display text-2xl text-gray-900">Order History</h2>
                <div class="flex gap-2">
                  <button class="order-filter active px-4 py-2 rounded-lg text-sm font-medium" data-filter="all">
                    All
                  </button>
                  <button class="order-filter px-4 py-2 rounded-lg text-sm font-medium" data-filter="delivered">
                    Delivered
                  </button>
                  <button class="order-filter px-4 py-2 rounded-lg text-sm font-medium" data-filter="pending">
                    Pending
                  </button>
                </div>
              </div>

            {% if customer.orders.size > 0 %}
              <div class="space-y-4">
                {% for order in customer.orders %}
                  <details class="order-item group border border-gray-200 rounded-lg p-5 hover:border-pink-300 transition-colors cursor-pointer" 
                    data-status="{{ order.fulfillment_status | default: 'pending' }}">
                    <summary class="flex justify-between items-center font-medium text-gray-900 group-open:text-pink-500 transition-colors">
                      <div class="flex items-center gap-4">
                        <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center">
                          <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                          </svg>
                        </div>
                        <div>
                          <p class="font-bold">Order #{{ order.order_number }}</p>
                          <p class="text-sm text-gray-500">{{ order.created_at | date: "%B %d, %Y at %I:%M %p" }}</p>
                        </div>
                      </div>
                      <div class="flex items-center gap-4">
                        <span class="text-lg font-bold">{{ order.total_price | money }}</span>
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="group-open:rotate-180 transition-transform">
                          <polyline points="6 9 12 15 18 9"></polyline>
                        </svg>
                      </div>
                    </summary>

                      {%- comment -%} Order Details {%- endcomment -%}
                      <div class="mt-6 space-y-4 border-t border-gray-100 pt-4">
                        
                        {%- comment -%} Status Badges & Tracking {%- endcomment -%}
                        <div class="flex flex-wrap gap-3">
                          <span class="
                            {% if order.financial_status == 'paid' %}
                              bg-green-100 text-green-700
                            {% elsif order.financial_status == 'pending' %}
                              bg-yellow-100 text-yellow-700
                            {% else %}
                              bg-red-100 text-red-700
                            {% endif %}
                            px-4 py-2 rounded-lg text-sm font-bold flex items-center gap-2
                          ">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                            </svg>
                            {{ order.financial_status | capitalize }}
                          </span>
                          
                          <span class="
                            {% if order.fulfillment_status == 'fulfilled' %}
                              bg-blue-100 text-blue-700
                            {% elsif order.fulfillment_status == 'partial' %}
                              bg-orange-100 text-orange-700
                            {% else %}
                              bg-gray-100 text-gray-700
                            {% endif %}
                            px-4 py-2 rounded-lg text-sm font-bold flex items-center gap-2
                          ">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
                            </svg>
                            {{ order.fulfillment_status | default: 'Processing' | capitalize }}
                          </span>

                          {% if order.fulfillment_status == 'fulfilled' %}
                            <a href="{{ order.customer_url }}" class="px-4 py-2 bg-purple-100 text-purple-700 rounded-lg text-sm font-bold hover:bg-purple-200 transition-colors flex items-center gap-2">
                              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                              </svg>
                              Track Package
                            </a>
                          {% endif %}
                        </div>

                        {%- comment -%} Shipping Address {%- endcomment -%}
                        {% if order.shipping_address %}
                          <div class="bg-gray-50 p-4 rounded-lg">
                            <p class="text-sm font-bold text-gray-900 mb-2">Shipping Address:</p>
                            <p class="text-sm text-gray-600">{{ order.shipping_address.name }}</p>
                            <p class="text-sm text-gray-600">{{ order.shipping_address.address1 }}</p>
                            {% if order.shipping_address.address2 != blank %}
                              <p class="text-sm text-gray-600">{{ order.shipping_address.address2 }}</p>
                            {% endif %}
                            <p class="text-sm text-gray-600">{{ order.shipping_address.city }}, {{ order.shipping_address.province }} {{ order.shipping_address.zip }}</p>
                            <p class="text-sm text-gray-600">{{ order.shipping_address.country }}</p>
                          </div>
                        {% endif %}

                      {%- comment -%} Order Items {%- endcomment -%}
                      <div class="space-y-3 mt-4">
                        <p class="font-bold text-gray-900">Order Items:</p>
                        {% for item in order.line_items %}
                          <div class="flex items-center gap-4 bg-white p-3 rounded-lg border border-gray-200">
                            {% if item.image %}
                              <img src="{{ item.image | image_url: width: 80 }}" alt="{{ item.title }}" class="w-16 h-16 object-cover rounded-lg">
                            {% else %}
                              <div class="w-16 h-16 bg-gray-100 rounded-lg flex items-center justify-center">
                                <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                              </div>
                            {% endif %}
                            <div class="flex-1">
                              <p class="font-medium text-gray-900">{{ item.title }}</p>
                              {% if item.variant_title %}
                                <p class="text-sm text-gray-500">{{ item.variant_title }}</p>
                              {% endif %}
                              <p class="text-sm text-gray-600 mt-1">Qty: {{ item.quantity }}</p>
                            </div>
                            <p class="font-bold text-gray-900">{{ item.final_line_price | money }}</p>
                          </div>
                        {% endfor %}
                      </div>

                      {%- comment -%} Order Summary {%- endcomment -%}
                      <div class="border-t border-gray-100 pt-4 mt-4 space-y-2 bg-gray-50 p-4 rounded-lg">
                        <div class="flex justify-between text-gray-600">
                          <span>Subtotal:</span>
                          <span>{{ order.line_items_subtotal_price | money }}</span>
                        </div>
                        {% if order.total_discounts > 0 %}
                          <div class="flex justify-between text-green-600">
                            <span>Discount:</span>
                            <span>-{{ order.total_discounts | money }}</span>
                          </div>
                        {% endif %}
                        {% if order.shipping_price > 0 %}
                          <div class="flex justify-between text-gray-600">
                            <span>Shipping:</span>
                            <span>{{ order.shipping_price | money }}</span>
                          </div>
                        {% endif %}
                        {% if order.tax_price > 0 %}
                          <div class="flex justify-between text-gray-600">
                            <span>Tax:</span>
                            <span>{{ order.tax_price | money }}</span>
                          </div>
                        {% endif %}
                        <div class="flex justify-between font-bold text-lg text-gray-900 pt-2 border-t border-gray-200">
                          <span>Total:</span>
                          <span>{{ order.total_price | money }}</span>
                        </div>
                      </div>

                      {%- comment -%} Action Buttons {%- endcomment -%}
                      <div class="flex gap-3 mt-6">
                        <a 
                          href="{{ order.customer_url }}" 
                          class="flex-1 text-center px-6 py-3 bg-black text-white rounded-lg font-bold hover:bg-pink-500 transition-colors"
                        >
                          View Full Details
                        </a>
                        {% if order.fulfillment_status == 'fulfilled' %}
                          <button class="px-6 py-3 border-2 border-gray-900 text-gray-900 rounded-lg font-bold hover:bg-gray-900 hover:text-white transition-colors">
                            Reorder
                          </button>
                        {% endif %}
                      </div>
                    </div>
                  </details>
                {% endfor %}
              </div>
            {% else %}
              <div class="text-center py-12">
                <div class="w-24 h-24 bg-gray-100 rounded-full mx-auto mb-4 flex items-center justify-center">
                  <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                  </svg>
                </div>
                <p class="text-gray-500 mb-6">You haven't placed any orders yet.</p>
                <a href="/collections/all" class="inline-block px-8 py-3 bg-black text-white rounded-full font-bold hover:bg-pink-500 transition-colors">
                  Start Shopping
                </a>
              </div>
            {% endif %}
            </div>
          </section>

          {%- comment -%} PROFILE SECTION {%- endcomment -%}
          <section id="profile" class="account-section">
            <div class="bg-white p-8 rounded-2xl shadow-sm">
              <div class="flex items-center justify-between mb-6">
                <h2 class="font-serif-display text-2xl text-gray-900">Profile Information</h2>
                <a 
                  href="{{ routes.account_edit_url }}" 
                  class="px-4 py-2 bg-black text-white rounded-lg font-bold text-sm hover:bg-pink-500 transition-colors"
                >
                  Edit Profile
                </a>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-4">
                  <div class="p-4 bg-gray-50 rounded-lg">
