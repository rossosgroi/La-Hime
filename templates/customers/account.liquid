{% comment %}
  Customer Account Template - La Hime
  Converts the React Account page to Shopify Liquid
{% endcomment %}

<div class="pt-32 pb-24 min-h-screen bg-stone-50">
  <div class="max-w-6xl mx-auto px-4">
    <h1 class="font-serif-display text-4xl mb-8 text-gray-900">My Account</h1>
    
    <div class="flex flex-col lg:flex-row gap-8">
      
      {%- comment -%} Sidebar {%- endcomment -%}
      <div class="w-full lg:w-72 flex-shrink-0 bg-white p-6 rounded-2xl shadow-sm h-fit border border-gray-100 sticky top-32">
        <div class="mb-8 px-2 pb-6 border-b border-gray-100 flex items-center gap-4">
          <div class="w-12 h-12 rounded-full bg-pink-100 flex items-center justify-center text-pink-500 font-bold text-xl">
            {{ customer.first_name | slice: 0 | upcase }}
          </div>
          <div class="overflow-hidden">
            <p class="text-xs text-gray-400 uppercase tracking-wider font-bold mb-1">Welcome back</p>
            <p class="font-bold text-gray-900 truncate">{{ customer.first_name }}</p>
          </div>
        </div>
        
        <nav class="space-y-2">
          <a href="/account" class="flex items-center gap-3 px-4 py-3 rounded-xl transition-all bg-black text-white shadow-md">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            Profile
          </a>
          <a href="/account#orders" class="flex items-center gap-3 px-4 py-3 rounded-xl transition-all text-gray-600 hover:bg-gray-50">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
              <line x1="3" y1="6" x2="21" y2="6"></line>
              <path d="M16 10a4 4 0 0 1-8 0"></path>
            </svg>
            Orders
          </a>
          <a href="/account/addresses" class="flex items-center gap-3 px-4 py-3 rounded-xl transition-all text-gray-600 hover:bg-gray-50">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
            Addresses
          </a>
          <a href="/account/logout" class="w-full flex items-center gap-3 px-4 py-3 rounded-xl text-gray-600 hover:bg-red-50 hover:text-red-500 transition-colors text-left mt-6 border-t border-gray-100">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
              <polyline points="16 17 21 12 16 7"></polyline>
              <line x1="21" y1="12" x2="9" y2="12"></line>
            </svg>
            Log Out
          </a>
        </nav>
      </div>

      {%- comment -%} Content Area {%- endcomment -%}
      <div class="flex-1 min-h-[500px]">
        
        {%- comment -%} Personal Info Card {%- endcomment -%}
        <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 mb-8">
          <h2 class="text-2xl font-bold mb-6 text-gray-900 flex items-center gap-2">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-pink-500">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            Personal Details
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-xs font-bold text-gray-400 uppercase tracking-wider mb-2">First Name</label>
              <div class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 text-gray-900">
                {{ customer.first_name }}
              </div>
            </div>
            <div>
              <label class="block text-xs font-bold text-gray-400 uppercase tracking-wider mb-2">Last Name</label>
              <div class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 text-gray-900">
                {{ customer.last_name }}
              </div>
            </div>
            <div class="md:col-span-2">
              <label class="block text-xs font-bold text-gray-400 uppercase tracking-wider mb-2">Email Address</label>
              <div class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 text-gray-900">
                {{ customer.email }}
              </div>
            </div>
          </div>
        </div>

        {%- comment -%} Order History {%- endcomment -%}
        <div id="orders" class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100">
          <h2 class="text-2xl font-bold mb-6 text-gray-900">Order History</h2>
          
          {% if customer.orders.size > 0 %}
            <div class="space-y-4">
              {% for order in customer.orders %}
                <div class="border border-gray-100 rounded-xl p-6 hover:border-pink-200 transition-colors">
                  <div class="flex justify-between items-start mb-4">
                    <div>
                      <p class="font-bold text-gray-900">Order #{{ order.name }}</p>
                      <p class="text-sm text-gray-500">{{ order.created_at | date: "%B %d, %Y" }}</p>
                    </div>
                    <span class="px-3 py-1 rounded-full text-xs font-bold {% if order.financial_status == 'paid' %}bg-green-100 text-green-800{% else %}bg-yellow-100 text-yellow-800{% endif %}">
                      {{ order.financial_status }}
                    </span>
                  </div>
                  
                  <div class="flex justify-between items-center">
                    <div class="text-sm text-gray-600">
                      {{ order.line_items.size }} {% if order.line_items.size == 1 %}item{% else %}items{% endif %} • {{ order.total_price | money }}
                    </div>
                    <a href="{{ order.customer_url }}" class="text-pink-500 font-bold text-sm hover:text-black transition-colors">
                      View Details →
                    </a>
                  </div>
                </div>
              {% endfor %}
            </div>
          {% else %}
            <div class="text-center py-12">
              <p class="text-gray-500 mb-4">No orders yet</p>
              <a href="/collections/all" class="inline-block bg-black text-white px-6 py-3 rounded-full font-bold hover:bg-pink-500 transition-colors">
                Start Shopping
              </a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
