<style>
  #search-modal {
    --search-overlay-bg: rgba(0, 0, 0, 0.25);
  }

  .search-modal-overlay {
    position: fixed;
    inset: 0;
    background: var(--search-overlay-bg);
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
    z-index: 50;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding: 2rem 1rem;
    padding-top: 5rem;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .search-modal-overlay:not(.hidden) {
    opacity: 1;
    pointer-events: auto;
  }

  .search-modal-container {
    width: 100%;
    max-width: 750px;
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12), 0 2px 8px rgba(0, 0, 0, 0.06);
    border: 1px solid rgba(0, 0, 0, 0.06);
    animation: searchModalSlideDown 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    max-height: 85vh;
  }

  @keyframes searchModalSlideDown {
    from {
      opacity: 0;
      transform: translateY(-30px);
      filter: blur(4px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
      filter: blur(0);
    }
  }

  .search-modal-header {
    padding: 1.5rem 1.75rem;
    border-bottom: 1px solid #f0f0f0;
    background: white;
    flex-shrink: 0;
  }

  .search-modal-header-content {
    display: flex;
    align-items: center;
    gap: 0.875rem;
  }

  .search-icon {
    color: #9ca3af;
    flex-shrink: 0;
    transition: color 0.2s ease;
  }

  .search-form {
    flex: 1;
    display: flex;
  }

  .search-modal-input {
    width: 100%;
    background: transparent;
    border: none;
    font-size: 1.0625rem;
    font-family: inherit;
    color: #111827;
    outline: none;
    padding: 0;
    transition: color 0.2s ease;
  }

  .search-modal-input::placeholder {
    color: #d1d5db;
  }

  .search-modal-input:focus {
    color: #111827;
  }

  .search-modal-input:focus ~ .search-icon {
    color: #6b7280;
  }

  .search-close-btn {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #9ca3af;
    transition: all 0.2s ease;
    flex-shrink: 0;
    border-radius: 6px;
  }

  .search-close-btn:hover {
    color: #111827;
    background: #f3f4f6;
  }

  .search-close-btn:active {
    transform: scale(0.95);
  }

  .search-modal-results {
    overflow-y: auto;
    flex: 1;
    min-height: 200px;
    max-height: 450px;
    background: white;
  }

  .search-modal-results::-webkit-scrollbar {
    width: 6px;
  }

  .search-modal-results::-webkit-scrollbar-track {
    background: transparent;
  }

  .search-modal-results::-webkit-scrollbar-thumb {
    background: #e5e7eb;
    border-radius: 3px;
  }

  .search-modal-results::-webkit-scrollbar-thumb:hover {
    background: #d1d5db;
  }

  .search-empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 3rem 2rem;
    text-align: center;
    color: #9ca3af;
    gap: 1rem;
  }

  .search-empty-icon {
    color: #e5e7eb;
    opacity: 0.8;
  }

  .search-empty-state p {
    font-size: 0.9375rem;
    font-weight: 500;
  }

  .search-result-list {
    padding: 0.5rem 0;
  }

  .search-result-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
    border-bottom: 1px solid #f9fafb;
  }

  .search-result-item:last-child {
    border-bottom: none;
  }

  .search-result-item:hover {
    background: #f9fafb;
  }

  .search-result-item:active {
    background: #f3f4f6;
  }

  .search-result-img {
    width: 70px;
    height: 70px;
    object-fit: cover;
    border-radius: 8px;
    background: #f3f4f6;
    flex-shrink: 0;
  }

  .search-result-info {
    flex: 1;
    min-width: 0;
  }

  .search-result-title {
    font-weight: 600;
    color: #111827;
    font-size: 0.95rem;
    margin-bottom: 0.375rem;
    line-height: 1.4;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .search-result-price {
    color: #6b7280;
    font-weight: 500;
    font-size: 0.875rem;
  }

  .search-modal-footer {
    padding: 1.5rem 1.75rem;
    border-top: 1px solid #f0f0f0;
    background: #fafafa;
    flex-shrink: 0;
  }

  .search-footer-label {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #9ca3af;
    margin-bottom: 0.875rem;
  }

  .search-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .search-tag {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 24px;
    font-size: 0.875rem;
    color: #374151;
    text-decoration: none;
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .search-tag:hover {
    background: #111827;
    color: white;
    border-color: #111827;
  }

  .search-tag:active {
    transform: scale(0.98);
  }

  @media (max-width: 768px) {
    .search-modal-overlay {
      padding: 1rem;
      padding-top: 4rem;
    }

    .search-modal-container {
      max-height: 90vh;
    }

    .search-modal-results {
      max-height: 350px;
    }

    .search-modal-input {
      font-size: 1rem;
    }
  }
</style>
