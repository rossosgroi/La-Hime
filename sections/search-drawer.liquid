<!-- Search Drawer -->
<div class="search-bar" id="search-drawer">
  <div class="search-content">
    <input
      type="search"
      class="search-input"
      placeholder="Search products..."
      aria-label="Search"
    >
    <div class="search-results"></div>
  </div>
</div>

<style>
  .search-bar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    z-index: 70;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-top: 80px;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .search-bar.active {
    opacity: 1;
    pointer-events: auto;
  }

  .search-content {
    width: 90%;
    max-width: 700px;
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    border: 1px solid rgba(0, 0, 0, 0.08);
    animation: slideDown 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .search-bar.active .search-content {
    animation: slideDown 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .search-input {
    width: 100%;
    padding: 1.75rem 1.5rem;
    border: none;
    font-size: 1.125rem;
    font-family: var(--font-body);
    outline: none;
    background: white;
    color: #111827;
    transition: all 0.3s ease;
  }

  .search-input::placeholder {
    color: #9ca3af;
  }

  .search-input:focus {
    background: #fafafa;
  }

  .search-results {
    max-height: 450px;
    overflow-y: auto;
    padding: 0;
    background: #ffffff;
  }

  .search-results::-webkit-scrollbar {
    width: 6px;
  }

  .search-results::-webkit-scrollbar-track {
    background: transparent;
  }

  .search-results::-webkit-scrollbar-thumb {
    background: #d1d5db;
    border-radius: 3px;
  }

  .search-results::-webkit-scrollbar-thumb:hover {
    background: #9ca3af;
  }

  .search-result-item {
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid #f3f4f6;
    display: flex;
    gap: 1.25rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .search-result-item:last-child {
    border-bottom: none;
  }

  .search-result-item:hover {
    background: #f9fafb;
  }

  .search-result-item:active {
    background: #f3f4f6;
  }

  .search-result-img {
    width: 70px;
    height: 70px;
    object-fit: cover;
    border-radius: 8px;
    flex-shrink: 0;
    background: #f3f4f6;
  }

  .search-result-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0.5rem;
  }

  .search-result-title {
    font-weight: 600;
    color: #111827;
    font-size: 0.95rem;
    line-height: 1.4;
  }

  .search-result-price {
    color: #6b7280;
    font-weight: 500;
    font-size: 0.875rem;
  }
</style>

{% schema %}
{
  "name": "Search Drawer"
}
{% endschema %}
