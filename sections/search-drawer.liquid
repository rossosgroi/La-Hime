<!-- Search Drawer -->
<div class="search-bar" id="search-drawer">
  <div class="search-content">
    <input
      type="search"
      class="search-input"
      placeholder="Search products..."
      aria-label="Search"
    >
    <div class="search-results"></div>
  </div>
</div>

<style>
  .search-bar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.8);
    z-index: 70;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-top: 100px;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .search-bar.active {
    opacity: 1;
    pointer-events: auto;
  }

  .search-content {
    width: 90%;
    max-width: 600px;
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
  }

  .search-input {
    width: 100%;
    padding: 1.5rem;
    border: none;
    font-size: 1.125rem;
    font-family: var(--font-body);
    outline: none;
  }

  .search-results {
    max-height: 400px;
    overflow-y: auto;
    padding: 1rem 0;
  }

  .search-result-item {
    padding: 1rem 1.5rem;
    border-bottom: 1px solid #f0f0f0;
    display: flex;
    gap: 1rem;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .search-result-item:hover {
    background: #f9f9f9;
  }

  .search-result-img {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: 4px;
  }

  .search-result-info {
    flex: 1;
  }

  .search-result-title {
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .search-result-price {
    color: var(--color-secondary);
    font-weight: 600;
  }
</style>

{% schema %}
{
  "name": "Search Drawer"
}
{% endschema %}
