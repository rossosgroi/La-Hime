{% comment %}
  Collection Section - Shop with products, filtering, and sorting
  Displays all products with tag filtering and sort options
{% endcomment %}

<div class="pt-32 pb-24 min-h-screen bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    {%- comment -%} Breadcrumb & Title {%- endcomment -%}
    <div class="mb-12">
      <div class="text-sm text-gray-500 mb-6 flex items-center gap-2">
        <a href="/" class="hover:text-black transition-colors">Home</a>
        <span>/</span>
        <span class="text-black font-medium">Shop</span>
      </div>

      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
          <h1 class="font-serif-display text-5xl text-gray-900 mb-2">
            Shop
          </h1>
          <p class="text-gray-600">
            Discover our curated collection of pieces
          </p>
        </div>
      </div>
    </div>

    {%- comment -%} Sort Bar {%- endcomment -%}
    <div class="flex items-center justify-between mb-8 pb-6 border-b border-gray-200">
      <div class="text-sm text-gray-600">
        {% if collection.all_products_count > 0 %}
          Showing {{ collection.products | size }} of {{ collection.all_products_count }} products
        {% endif %}
      </div>
      
      <div class="flex items-center gap-4">
        <label for="sort-select" class="text-sm font-bold text-gray-900">Sort by:</label>
        <select id="sort-select" class="px-4 py-2 border border-gray-200 rounded-full text-sm font-bold hover:border-gray-900 transition-colors">
          <option value="">Newest</option>
          <option value="best-selling">Best Selling</option>
          <option value="title-ascending">A - Z</option>
          <option value="title-descending">Z - A</option>
          <option value="price-ascending">Price: Low to High</option>
          <option value="price-descending">Price: High to Low</option>
        </select>
      </div>
    </div>

    {%- comment -%} Product Grid with Placeholders {%- endcomment -%}
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {% assign products = collection.products %}
      
      {% if products.size == 0 %}
        {%- comment -%} Placeholder Products {%- endcomment -%}
        {% for i in (1..8) %}
          <div class="group cursor-pointer transform transition-all duration-300 hover:-translate-y-2">
            <div class="relative aspect-[3/4] bg-gradient-to-br from-pink-50 to-purple-50 rounded-xl overflow-hidden mb-4 shadow-sm group-hover:shadow-lg flex items-center justify-center">
              <div class="text-center">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mx-auto text-gray-300 mb-2">
                  <rect x="3" y="3" width="18" height="18" rx="2"></rect>
                  <circle cx="8.5" cy="8.5" r="1.5"></circle>
                  <path d="m21 15-5-5L5 21"></path>
                </svg>
                <p class="text-sm text-gray-400">Placeholder {{ i }}</p>
              </div>

              <span class="absolute top-3 left-3 bg-black text-white text-xs font-bold px-2 py-1 rounded-full uppercase">
                New
              </span>

              <button 
                class="absolute bottom-4 right-4 p-2 bg-white rounded-full shadow-lg hover:bg-pink-500 hover:text-white transition-all duration-200 transform opacity-0 group-hover:opacity-100 translate-y-4 group-hover:translate-y-0"
                aria-label="Add to wishlist"
              >
                ♡
              </button>
            </div>

            <h3 class="font-bold text-gray-900 mb-1 group-hover:text-pink-500 transition-colors">
              Product {{ i }}
            </h3>
            <p class="text-gray-600 text-sm mb-3">
              ${{ i | times: 45 | plus: 50 }}.00
            </p>

            <button 
              class="w-full py-2 bg-black text-white rounded-full text-sm font-bold hover:bg-pink-500 transition-colors duration-200"
            >
              Add to Cart
            </button>
          </div>
        {% endfor %}
      {% else %}
        {%- comment -%} Actual Products {%- endcomment -%}
        {% for product in products %}
          <div class="group cursor-pointer transform transition-all duration-300 hover:-translate-y-2">
            <div class="relative aspect-[3/4] bg-gray-100 rounded-xl overflow-hidden mb-4 shadow-sm group-hover:shadow-lg">
              {% if product.featured_image %}
                <img 
                  src="{{ product.featured_image | image_url: width: 350, height: 480 }}" 
                  alt="{{ product.title }}"
                  loading="lazy"
                  class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                />
              {% endif %}

              {% if product.images.size > 1 %}
                <img 
                  src="{{ product.images[1] | image_url: width: 350, height: 480 }}" 
                  alt="{{ product.title }} alternate view"
                  class="absolute inset-0 w-full h-full object-cover opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                />
              {% endif %}

              {% if product.tags contains 'new' %}
                <span class="absolute top-3 left-3 bg-black text-white text-xs font-bold px-2 py-1 rounded-full uppercase">
                  New
                </span>
              {% endif %}

              <button 
                class="absolute bottom-4 right-4 p-2 bg-white rounded-full shadow-lg hover:bg-pink-500 hover:text-white transition-all duration-200 transform opacity-0 group-hover:opacity-100 translate-y-4 group-hover:translate-y-0 wishlist-toggle"
                data-product-id="{{ product.id }}"
                data-product-title="{{ product.title }}"
                data-product-image="{{ product.featured_image | image_url }}"
                aria-label="Add to wishlist"
              >
                ♡
              </button>
            </div>

            <a href="{{ product.url }}" class="block">
              <h3 class="font-bold text-gray-900 mb-1 group-hover:text-pink-500 transition-colors line-clamp-2">
                {{ product.title }}
              </h3>
              <p class="text-gray-600 text-sm mb-3">
                {{ product.price | money }}
              </p>
            </a>

            <form action="/cart/add" method="post" class="add-to-cart-form">
              <input type="hidden" name="id" value="{{ product.variants.first.id }}">
              <button 
                type="submit"
                class="w-full py-2 bg-black text-white rounded-full text-sm font-bold hover:bg-pink-500 transition-colors duration-200"
              >
                Add to Cart
              </button>
            </form>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>

<style>
  .font-serif-display { font-family: 'Playfair Display', serif; }
  .line-clamp-2 { display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
</style>

{% schema %}
{
  "name": "Collection",
  "templates": ["collection"]
}
{% endschema %}
