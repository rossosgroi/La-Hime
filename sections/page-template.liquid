{% comment %}
  Page Template Section - Standard Pages
{% endcomment %}

<section class="page-template">
  <div class="container" style="max-width: 800px;">
    <h1>{{ page.title }}</h1>

    <div style="margin-top: 2rem; line-height: 1.8; color: #666;">
      {{ page.content }}
    </div>

    <div style="margin-top: 3rem; text-align: center;">
      <a href="{{ routes.root_url }}" class="btn btn-primary">Back to Home</a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Page Template"
}
{% endschema %}
