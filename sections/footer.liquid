{% comment %}
  Footer Section - La Hime
  Converts the React Footer component to Shopify Liquid
{% endcomment %}

<footer class="bg-white pt-16 pb-8 border-t border-pink-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-12">
      <div class="col-span-1 md:col-span-2">
        <h2 class="font-brand text-3xl mb-4 text-gray-900">{{ section.settings.footer_title | default: shop.name }}</h2>
        <p class="text-gray-500 max-w-sm mb-6 leading-relaxed">
          {{ section.settings.footer_description | default: "Sweet & Spicy. A fusion of Tokyo aesthetic and Shanghai streetwear for the modern fashion enthusiast." }}
        </p>
        <div class="flex space-x-4">
          {% if section.settings.social_instagram_link != blank %}
            <a href="{{ section.settings.social_instagram_link }}" target="_blank" rel="noopener" class="w-10 h-10 rounded-full bg-pink-50 flex items-center justify-center text-pink-400 hover:bg-black hover:text-white transition-all duration-300 hover:-translate-y-1 shadow-sm" aria-label="Instagram">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
              </svg>
            </a>
          {% endif %}
          
          {% if section.settings.social_twitter_link != blank %}
            <a href="{{ section.settings.social_twitter_link }}" target="_blank" rel="noopener" class="w-10 h-10 rounded-full bg-pink-50 flex items-center justify-center text-pink-400 hover:bg-black hover:text-white transition-all duration-300 hover:-translate-y-1 shadow-sm" aria-label="Twitter">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
              </svg>
            </a>
          {% endif %}
          
          {% if section.settings.social_email != blank %}
            <a href="mailto:{{ section.settings.social_email }}" class="w-10 h-10 rounded-full bg-pink-50 flex items-center justify-center text-pink-400 hover:bg-black hover:text-white transition-all duration-300 hover:-translate-y-1 shadow-sm" aria-label="Email">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>
      
      {%- comment -%} Spacer column {%- endcomment -%}
      <div class="hidden md:block"></div>

      <div>
        <h3 class="font-serif-display font-bold text-lg mb-6 text-gray-900">{{ section.settings.menu_title | default: "Care" }}</h3>
        <ul class="space-y-3 text-gray-500">
          {% if section.settings.footer_menu != blank %}
            {% for link in linklists[section.settings.footer_menu].links %}
              <li>
                <a href="{{ link.url }}" class="hover:text-pink-500 hover:pl-2 transition-all duration-200">
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          {% else %}
            <li><a href="/pages/contact" class="hover:text-pink-500 hover:pl-2 transition-all duration-200">Contact Us</a></li>
            <li><a href="/pages/care" class="hover:text-pink-500 hover:pl-2 transition-all duration-200">Care Instructions</a></li>
            <li><a href="/pages/shipping" class="hover:text-pink-500 hover:pl-2 transition-all duration-200">Shipping</a></li>
            <li><a href="/pages/returns" class="hover:text-pink-500 hover:pl-2 transition-all duration-200">Returns</a></li>
            <li><a href="/pages/size-guide" class="hover:text-pink-500 hover:pl-2 transition-all duration-200">Size Guide</a></li>
            <li><a href="/pages/faq" class="hover:text-pink-500 hover:pl-2 transition-all duration-200">FAQ</a></li>
          {% endif %}
        </ul>
      </div>
    </div>
    
    <div class="border-t border-gray-100 pt-8 flex flex-col md:flex-row justify-between items-center text-sm text-gray-400">
      <p>Â© {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.</p>
      <div class="flex space-x-6 mt-4 md:mt-0">
        <a href="/pages/privacy" class="hover:text-gray-900">Privacy</a>
        <a href="/pages/terms" class="hover:text-gray-900">Terms</a>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "footer_title",
      "label": "Footer Title",
      "default": "La Hime"
    },
    {
      "type": "textarea",
      "id": "footer_description",
      "label": "Footer Description",
      "default": "Sweet & Spicy. A fusion of Tokyo aesthetic and Shanghai streetwear for the modern fashion enthusiast."
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "url",
      "id": "social_instagram_link",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "social_twitter_link",
      "label": "Twitter URL"
    },
    {
      "type": "text",
      "id": "social_email",
      "label": "Email Address"
    },
    {
      "type": "header",
      "content": "Footer Menu"
    },
    {
      "type": "text",
      "id": "menu_title",
      "label": "Menu Title",
      "default": "Care"
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer Menu",
      "info": "Select a menu for footer links"
    }
  ]
}
{% endschema %}
