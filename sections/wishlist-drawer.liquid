{% comment %}
  Wishlist Drawer Section
{% endcomment %}

<div class="wishlist-drawer" data-drawer>
  <div class="drawer-header">
    <h2 class="drawer-title">Wishlist</h2>
    <button class="close-btn" data-close-drawer aria-label="Close wishlist">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
  </div>

  <div class="drawer-content">
    <!-- Wishlist items will be populated by JavaScript -->
    <p style="text-align: center; padding: 2rem; color: #999;">Your wishlist is empty</p>
  </div>

  <div class="drawer-footer">
    <a href="{{ routes.root_url }}" class="btn btn-primary" style="width: 100%; text-align: center; display: block;">Continue Shopping</a>
  </div>
</div>

<style>
  .wishlist-drawer {
    position: fixed;
    top: 0;
    right: 0;
    width: 100%;
    max-width: 400px;
    height: 100vh;
    background: white;
    z-index: 65;
    transform: translateX(100%);
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
    box-shadow: -2px 0 8px rgba(0, 0, 0, 0.1);
  }

  .wishlist-drawer.active {
    transform: translateX(0);
  }

  .wishlist-drawer .drawer-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid #f0f0f0;
  }

  .wishlist-drawer .drawer-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0;
  }

  .wishlist-drawer .drawer-content {
    flex: 1;
    overflow-y: auto;
    padding: 1.5rem;
  }

  .wishlist-drawer .drawer-footer {
    padding: 1.5rem;
    border-top: 1px solid #f0f0f0;
  }

  @media (max-width: 768px) {
    .wishlist-drawer {
      max-width: 100%;
    }
  }
</style>

{% schema %}
{
  "name": "Wishlist Drawer"
}
{% endschema %}
