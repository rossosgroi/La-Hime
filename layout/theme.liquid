<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ page_title }}{% if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif %}{% if current_page != 1 %} &ndash; Page {{ current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}</title>

  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  <link rel="canonical" href="{{ canonical_url }}">

  {% if settings.favicon %}
    <link rel="icon" type="image/png" href="{{ settings.favicon | img_url: '32x32' }}">
  {% endif %}

  <!-- Preconnect to external resources -->
  <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Pacifico&family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">

  <!-- Tailwind CSS CDN for development (replace with compiled CSS in production) -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Theme CSS -->
  {{ 'theme.css' | asset_url | stylesheet_tag }}
  {{ 'custom.css' | asset_url | stylesheet_tag }}

  <!-- Theme JavaScript -->
  <script src="{{ 'theme.js' | asset_url }}"></script>
  <script src="{{ 'cart.js' | asset_url }}"></script>

  <!-- Cache control for better updates -->
  <meta http-equiv="cache-control" content="no-cache, no-store, must-revalidate">
  <meta http-equiv="pragma" content="no-cache">
  <meta http-equiv="expires" content="0">

  {{ content_for_header }}

  <style>
    body {
      font-family: 'Inter', sans-serif;
      background-color: #fff0f5;
      min-height: 100vh;
    }
    .font-brand {
      font-family: 'Pacifico', cursive;
    }
    .font-serif-display {
      font-family: 'Playfair Display', serif;
    }
    
    /* Custom Scrollbar */
    ::-webkit-scrollbar {
      width: 8px;
      height: 8px;
    }
    ::-webkit-scrollbar-track {
      background: #fff;
    }
    ::-webkit-scrollbar-thumb {
      background: #fbcfe8;
      border-radius: 4px;
    }
    ::-webkit-scrollbar-thumb:hover {
      background: #f472b6;
    }
    
    /* Hide scrollbar utility */
    .no-scrollbar::-webkit-scrollbar {
      display: none;
    }
    .no-scrollbar {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }

    /* Animation for blob effects */
    @keyframes blob {
      0% { transform: translate(0px, 0px) scale(1); }
      33% { transform: translate(30px, -50px) scale(1.1); }
      66% { transform: translate(-20px, 20px) scale(0.9); }
      100% { transform: translate(0px, 0px) scale(1); }
    }
    .animate-blob {
      animation: blob 7s infinite;
    }
    .animation-delay-2000 {
      animation-delay: 2s;
    }
  </style>
</head>

<body class="flex flex-col min-h-screen w-full overflow-x-hidden pt-14">
  
  <!-- Overlay backdrop for drawers -->
  <div id="drawer-overlay" class="fixed inset-0 bg-black/30 z-50 hidden opacity-0 transition-opacity duration-300" onclick="closeAllDrawers()" style="display: none !important;"></div>

  <!-- Header/Navbar -->
  {% section 'header' %}

  <!-- Main Content -->
  <main id="MainContent" class="flex-grow" role="main">
    {{ content_for_layout }}
  </main>

  <!-- Footer -->
  {% section 'footer' %}

  <!-- Overlay backdrop for drawers -->
  <div id="drawer-overlay" class="fixed inset-0 bg-black/30 z-50 hidden opacity-0 transition-opacity duration-300" onclick="closeAllDrawers()" style="display: none !important;"></div>

  <!-- Cart Drawer -->
  <div id="cart-drawer" class="cart-drawer" data-drawer style="position: fixed; top: 0; right: 0; width: 100%; max-width: 400px; height: 100vh; background: white; z-index: 65; transition: transform 0.3s ease; display: flex; flex-direction: column; box-shadow: -2px 0 8px rgba(0, 0, 0, 0.1);">
    <div class="drawer-header" style="display: flex; justify-content: space-between; align-items: center; padding: 1.5rem; border-bottom: 1px solid #f0f0f0;">
      <h2 class="drawer-title" style="font-size: 1.25rem; font-weight: 700; margin: 0;">Shopping Cart</h2>
      <button class="close-btn" data-close-drawer aria-label="Close cart" onclick="closeCartDrawer()" style="background: none; border: none; cursor: pointer; padding: 0.5rem;">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    <div class="drawer-content" style="flex: 1; overflow-y: auto; padding: 1.5rem;">
      <p style="text-align: center; color: #999;">Your cart is empty</p>
    </div>
    <div class="drawer-footer" style="padding: 1.5rem; border-top: 1px solid #f0f0f0;">
      <div style="display: flex; justify-content: space-between; margin-bottom: 1rem;">
        <span style="font-weight: 600;">Total:</span>
        <span class="cart-total" style="font-weight: 700;">$0.00</span>
      </div>
      <form action="{{ routes.cart_url }}" method="post" style="margin-bottom: 0.5rem;">
        <button type="submit" style="width: 100%; background: black; color: white; padding: 0.75rem; border: none; cursor: pointer; font-weight: 600;">Proceed to Checkout</button>
      </form>
      <a href="{{ routes.root_url }}" style="width: 100%; text-align: center; display: block; background: #f3f4f6; color: #111; padding: 0.75rem; text-decoration: none; font-weight: 600; border: none; cursor: pointer;">Continue Shopping</a>
    </div>
  </div>

  <!-- Wishlist Drawer -->
  <div id="wishlist-drawer" class="wishlist-drawer" data-drawer style="position: fixed; top: 0; right: 0; width: 100%; max-width: 400px; height: 100vh; background: white; z-index: 65; transition: transform 0.3s ease; display: flex; flex-direction: column; box-shadow: -2px 0 8px rgba(0, 0, 0, 0.1);">
    <div class="drawer-header" style="display: flex; justify-content: space-between; align-items: center; padding: 1.5rem; border-bottom: 1px solid #f0f0f0;">
      <h2 class="drawer-title" style="font-size: 1.25rem; font-weight: 700; margin: 0;">Wishlist</h2>
      <button class="close-btn" data-close-drawer aria-label="Close wishlist" onclick="closeWishlistDrawer()" style="background: none; border: none; cursor: pointer; padding: 0.5rem;">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    <div class="drawer-content" style="flex: 1; overflow-y: auto; padding: 1.5rem;" id="wishlist-items">
      <p style="text-align: center; color: #999;">Your wishlist is empty</p>
    </div>
    <div class="drawer-footer" style="padding: 1.5rem; border-top: 1px solid #f0f0f0;">
      <a href="{{ routes.root_url }}" style="width: 100%; text-align: center; display: block; background: black; color: white; padding: 0.75rem; text-decoration: none; font-weight: 600;">Continue Shopping</a>
    </div>
  </div>

  <!-- Search Modal -->
  {% render 'search-modal' %}

</body>
</html>
