<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ page_title }}{% if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif %}{% if current_page != 1 %} &ndash; Page {{ current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}</title>

  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  <link rel="canonical" href="{{ canonical_url }}">

  {% if settings.favicon %}
    <link rel="icon" type="image/png" href="{{ settings.favicon | img_url: '32x32' }}">
  {% endif %}

  <!-- Preconnect to external resources -->
  <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Pacifico&family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">

  <!-- Tailwind CSS CDN for development (replace with compiled CSS in production) -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Theme CSS -->
  {{ 'theme.css' | asset_url | stylesheet_tag }}
  {{ 'custom.css' | asset_url | stylesheet_tag }}

  <!-- Theme JavaScript -->
  <script src="{{ 'theme.js' | asset_url }}" defer></script>
  <script src="{{ 'cart.js' | asset_url }}" defer></script>

  <!-- Cache control for better updates -->
  <meta http-equiv="cache-control" content="no-cache, no-store, must-revalidate">
  <meta http-equiv="pragma" content="no-cache">
  <meta http-equiv="expires" content="0">

  {{ content_for_header }}

  <style>
    body {
      font-family: 'Inter', sans-serif;
      background-color: #fff0f5;
      background-image: 
        radial-gradient(at 0% 0%, hsla(330, 100%, 90%, 0.5) 0, transparent 50%), 
        radial-gradient(at 50% 100%, hsla(260, 100%, 90%, 0.5) 0, transparent 50%), 
        radial-gradient(at 100% 0%, hsla(190, 100%, 90%, 0.5) 0, transparent 50%);
      min-height: 100vh;
    }
    .font-brand {
      font-family: 'Pacifico', cursive;
    }
    .font-serif-display {
      font-family: 'Playfair Display', serif;
    }
    
    /* Custom Scrollbar */
    ::-webkit-scrollbar {
      width: 8px;
      height: 8px;
    }
    ::-webkit-scrollbar-track {
      background: #fff;
    }
    ::-webkit-scrollbar-thumb {
      background: #fbcfe8;
      border-radius: 4px;
    }
    ::-webkit-scrollbar-thumb:hover {
      background: #f472b6;
    }
    
    /* Hide scrollbar utility */
    .no-scrollbar::-webkit-scrollbar {
      display: none;
    }
    .no-scrollbar {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }

    /* Animation for blob effects */
    @keyframes blob {
      0% { transform: translate(0px, 0px) scale(1); }
      33% { transform: translate(30px, -50px) scale(1.1); }
      66% { transform: translate(-20px, 20px) scale(0.9); }
      100% { transform: translate(0px, 0px) scale(1); }
    }
    .animate-blob {
      animation: blob 7s infinite;
    }
    .animation-delay-2000 {
      animation-delay: 2s;
    }
  </style>
</head>

<body class="flex flex-col min-h-screen w-full overflow-x-hidden pt-14">
  
  <!-- Skip to content link for accessibility -->
  <a href="#MainContent" class="sr-only">Skip to content</a>

  <!-- Header/Navbar -->
  {% section 'header' %}

  <!-- Main Content -->
  <main id="MainContent" class="flex-grow" role="main">
    {{ content_for_layout }}
  </main>

  <!-- Footer -->
  {% section 'footer' %}

  <!-- Cart Drawer (AJAX) -->
  {% render 'cart-drawer' %}

  <!-- Wishlist Drawer -->
  {% render 'wishlist-drawer' %}

  <!-- Search Modal -->
  {% render 'search-modal' %}

</body>
</html>
